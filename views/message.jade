extends layout

block content
    .content-container
        h1 Send message
        form.message(action='/message', method='post')
            p Send message to
                br
                select(name='to')
                    each user in users
                        if user.id !== userid
                            option(value=user.id) #{user.first_name} #{user.last_name}
                br
                input(type='text', name='title', placeholder="Message title")
                br
                textarea(name="body", cols="30", rows="10", placeholder="Message")
                br
                input(type='submit', value='Send')
                